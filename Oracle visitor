CREATE TABLE access_logs (
    log_id      NUMBER GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    visitor_id  VARCHAR2(100), -- 可以是 IP 地址或用戶 UID
    access_date DATE DEFAULT SYSDATE,
    -- 建立索引以加速查詢，這對大數據量非常重要
    CONSTRAINT unique_daily_visit UNIQUE (visitor_id, TRUNC(access_date))
);

-- 建立基於日期的索引，優化 TRUNC 函數查詢
CREATE INDEX idx_access_date ON access_logs (TRUNC(access_date));
